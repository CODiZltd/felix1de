<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>



		<record id="contact_tree_view123" model="ir.ui.view">
		    <field name="name">Kontakte</field>
		    <field name="model">res.partner</field>
		    <field name="inherit_id" ref="base.view_partner_form"/>
		    <field name="arch" type="xml">
		    
		     <!--xpath expr="//field[@name='name']" position="replace">
                <field name="name" placeholder="Name..." default_focus="1"/>
                <field name="nachname" placeholder="Nachname..." attrs="{'invisible': True}"/> 
                <field name="vorname" placeholder="Vorname..." attrs="{'invisible': [('is_company','=', True)]}"/>  
             </xpath-->

		          <field name ="parent_id" position="before">
		          <group>
		              <field name="ist_kontakt"/>
		          </group>
                  </field>
             <xpath expr="//notebook" position="inside">
                          <page string="Mandanten">
                               <field name="client_id">
                                  <tree editable="bottom">
                                   <field name="name"/>
                                   <field name="client_number" string="Client Number"/>
                                   <field name="bank_id" string="Accountant"/>
                                   <field name="branch_rel" string="Branches"/>
                                   
                                   </tree>
                             </field>
                             
            </page>

                       </xpath>
		    </field>
		</record>
		
		<record id="contact_form_view123" model="ir.ui.view">
		    <field name="name">Kontakt</field>
		    <field name="model">res.partner</field>
		    <field name="arch" type="xml">
		        <form string="Kontakt">
					
		           <sheet>
					    <field name="image" widget='image' class="oe_avatar" options='{"preview_image": "image_medium", "size": [90, 90]}'/>
					     <div class="oe_title">
                           <h1> <field name="name" default_focus="1" placeholder="First Name"/>
                            <field name="last_name" default_focus="1" placeholder="Last Name"/>
                        </h1>
                        </div>
					   
					   <group>
					      <group>
							  <field name="contact_id"/>
						      <field name="con_acquired_by"/>
						      <field name="contact_since"/>
		                      <field name="phone"/>
		                      <field name="mobile"/>        
					      </group>
					      <group>
						      <field name="fax"/>
						      <field name="email"/>
		                       <field name="comment"/>
		                                   
						      
					      </group>
					     </group>
                    <notebook position="inside">
					<page string="Address">
								 <group>
								   <group>
								       <label for="street" string="Address"/>
											<div class="o_address_format">
												
                                                    <field name="street" placeholder="Street..." class="o_address_street"/>
												<field name="house_no" placeholder="House No..." class="o_address_street"/>
												<field name="street2" placeholder="Street 2..." class="o_address_street"/>
													
												<field name="city" placeholder="City" class="o_address_city"/>
												<field name="state" class="o_address_state" placeholder="State"/>
												<field name="zip" placeholder="ZIP" class="o_address_zip"/>
												<field name="country_id" placeholder="Country" class="o_address_country"/>

												
											</div>
								   </group>
								   <group>
								   
								   </group>
								 </group>
                             </page>
                                <page string="Tickets">
                               <field name="ticket_id"/>
                          </page>
                        <page string="Client">
							   <field name="client_id">
                                  <tree editable="bottom">
                                   <field name="name"/>
                                   <field name="client_number" string="Client Number"/>
                                   <field name="bank_id" string="Accountant"/>
                                   <field name="branch_rel" string="Branches"/>
                                   
                                   </tree>
                             </field>
                          </page>
                      
                          
                            </notebook>                       
					  
		           </sheet>
		        </form>
		    </field>
		</record>
		  
		  <record id="action_contact_system123" model="ir.actions.act_window">
		    <field name="name">Kontake</field>
		    <field name="type">ir.actions.act_window</field>
		    <field name="res_model">res.partner</field>
		    <field name="domain">[('ist_kontakt', '=', True)]</field>
		    <field name="view_type">form</field>
		    <field name="view_mode">tree,form</field>
		   
		</record>

		<menuitem id="menu_main" name="Kontake"
		groups="group_felix1_mitarbeiter,group_felix1_mandant_lesen,group_felix1_mandant_schreiben,group_felix1_abteilungsleiter"/>
		<menuitem id="menu_contact" name="Liste Kontakte" parent="menu_main"/>
	    <menuitem id="sub_menu" name="Kontakte" parent="menu_contact" action="action_contact_system123"/>
			

        <record id="view_partner_address_hide_form" model="ir.ui.view">
            <field name="name">partner.address.hide.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
            	 <xpath expr="//form/sheet/group/group/div" position="replace">
            	 </xpath>
            	 <label for="street"  position="replace"/>
            	 <field name="website"  position="replace"/>
            	</field>
            </record>

         <record id="view_partner_address_conatct_form" model="ir.ui.view">
             <field name="name">partner.address.contact.form</field>
             <field name="model">res.partner</field>
             <field name="inherit_id" ref="base.view_partner_form"/>
             <field name="arch" type="xml">
		    <field name="child_ids" position="before">
                    <group>
                        <group>
                        	<group>
                            <label for="street" string="Address"/>
                            <div class="o_address_format">
                                <div class="oe_edit_only">
                                    <button name="open_parent" type="object" string="(edit)" class="oe_link"
                                        attrs="{'invisible': ['|', ('parent_id', '=', False), ('type', '!=', 'contact')]}"/>
                                </div>
                                
                                <field name="street" placeholder="Street..." class="o_address_street"
                                    attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                                <field name="street2" placeholder="Street 2..." class="o_address_street"
                                    attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                                <field name="city" placeholder="City" class="o_address_city"
                                    attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                                <field name="state_id" class="o_address_state" placeholder="State" options='{"no_open": True}' on_change="onchange_state(state_id)"
                                    attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}" context="{'country_id': country_id, 'zip': zip}"/>
                                <field name="zip" placeholder="ZIP" class="o_address_zip"
                                    attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                                <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}'
                                    attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                            </div>
                            <field name="website" widget="url" placeholder="e.g. www.odoo.com"/>
                        </group>
                        </group>
                    </group>
		    </field>
		</field>
	</record>
	
	 <record id="action_contacts" model="ir.actions.act_window">
       <field name="name">Contacts</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <!--field name="context">{"search_default_customer":1}</field-->
        <!--field name="domain">[('ist_kontakt','=',True)]</field-->
        <field name="search_view_id" ref="base.view_res_partner_filter"/>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Click to add a contact in your address book.
          </p><p>
           Odoo helps you easily track all activities related to
            a customer; discussions, history of business opportunities,
            documents, etc.
          </p>
        </field>
    </record>
    <record id="action_contacts_tree_view" model="ir.actions.act_window.view">
       <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="base.view_partner_tree"/>
        <field name="act_window_id" ref="action_contacts"/>
    </record>
    
    <menuitem name="Contacts"
        id="menu_contacts"
        sequence="4"
        action="action_contacts"
        web_icon="mail,static/description/icon2.png"
        groups="base.group_user,base.group_partner_manager"/>
            
	
      <!--menuitem id="mail.menu_contacts" name="Mandanten Test" sequence="6"/--> 
             <menuitem id="client_sub_menu12" parent="mail.menu_contacts" name="Mandantenliste"/> 
            <menuitem id="client_sub_menu_sub21" parent="mail.menu_contacts" name="Mandant Partner" action="action_contacts"/>

	</data>
</openerp>

