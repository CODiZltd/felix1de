<?xml version="1.0" encoding="UTF-8"?>
<openerp>
<data>
<!--search-->
   <record model="ir.ui.view" id="mandanten_search_view">
            <field name="name">mandanten.search</field>
            <field name="model">backend.mandanten</field>
            <field name="arch" type="xml">
                <search>
                    <field name="man_mandantennummer"/>
                    <field name="man_mandant"/>
                </search>
            </field>
    </record>
<!--tree-->    
    <record model="ir.ui.view" id="mandanten_tree_view">
            <field name="name">mandanten.tree</field>
            <field name="model">backend.mandanten</field>
            <field name="arch" type="xml">
                <tree string="Mandant Liste" editable="bottom">
                    <field name="man_accessid"/>
                    <field name="man_mandant"/>
                    <field name="man_bemerkung"/>
                    <field name="man_mandantennummer"/> 
                    <field name="man_emailpisa"/>
                    <field name="man_kanzlei"/>
                    <field name="man_steuerberater"/>
                    <field name="man_unternehmensform"/>
                    <field name="man_branche"/>
                    <field name="man_status"/>
                    <field name="man_empfaenger1"/>
                    <field name="man_empfaenger2"/>
                    <field name="man_strasse"/>
                    <field name="man_hausnummer"/>
                    <field name="man_plz"/>
                    <field name="man_ort"/>
                    <field name="man_bundesland"/>
                    <field name="man_land"/>
                    <field name="man_adresse"/>
                    <field name="man_bankname"/>
                    <field name="man_bic"/>
                    <field name="man_iban"/>
                    <field name="man_kontoinhaber"/>
                    <field name="man_telefon1"/>
                    <field name="man_telefon2"/>
                    <field name="man_email1"/>
                    <field name="man_email2"/>
                    <field name="man_datenok"/>
                </tree>
            </field>
    </record>

    <record model="ir.actions.act_window" id="felix1de_backend.mandanten_list_action">
            <field name="name">Fields</field>
            <field name="res_model">backend.mandanten</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Zum Anzeigen der Feldinhalte
                </p>
            </field>
    </record>
</data>
</openerp>