<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
<!--search-->
    <record model="ir.ui.view" id="berater_search_view">
            <field name="name">berater.search</field>
            <field name="model">backend.berater</field>
            <field name="arch" type="xml">
                <search>
                    <field name="ber_nachname"/>
                    <field name="ber_beraterid"/>
                </search>
            </field>
    </record>
<!--tree-->
    <record model="ir.ui.view" id="berater_tree_view">
            <field name="name">berater.tree</field>
            <field name="model">backend.berater</field>
            <field name="arch" type="xml">
                <tree string="Berater" editable="top">
                    <field name="ber_accessid"/>
                    <field name="ber_beraterid"/>
                    <field name="ber_etlbenutzername"/>
                    <field name="ber_vorname"/>
                    <field name="ber_nachname"/>
                    <field name="ber_anrede"/>
                    <field name="ber_titel"/>
                    <field name="ber_kanzleileiter"/>
                    <field name="ber_ansprechpartner"/>
                    <field name="ber_stb"/>
                    <field name="ber_stbIn"/>
                    <field name="ber_ra"/>
                    <field name="ber_wp"/>
                    <field name="ber_weiteretitel"/>
                    <field name="ber_hochschulabschluss"/>
                    <field name="ber_foto"/>
                    <field name="ber_vornamenachname"/>
                    <field name="ber_nachnamevorname"/>
                    <field name="ber_telefon1"/>
                    <field name="ber_telefon2"/>
                    <field name="ber_telefon3"/>
                    <field name="ber_email1"/>
                    <field name="ber_email2"/>
                    <field name="ber_email3"/>
                    <field name="ber_fax"/>
                    <field name="ber_bemerkung"/>    
                    <field name="ber_datenok"/>
                </tree>
            </field>
    </record>
    

    
    <record model="ir.actions.act_window" id="felix1de_backend.berater_list_action">
            <field name="name">Fields</field>
            <field name="res_model">backend.berater</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Zum Anzeigen der Feldinhalte
                </p>
            </field>
    </record>
    </data>
</openerp>